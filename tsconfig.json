{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "lib": ["DOM"]
  },
  "exclude": [
    "node_modules",
    "./src/**/__tests__/**/*.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}